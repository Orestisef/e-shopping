<% include ../layouts/layout %>
<% include ../partials/header %>
<div class="container">

  <% if (products) {%>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">
        <% products.forEach(function(product) { %>
        <li class="list-group-item">
          <span class="badge pull-left"><%= product.qty %></span>
          <strong><%= product.item.title %></strong>
          <span class= "badge pull-right"><%= product.price %>$</span>
          <button type="button" class="btn btn-outline-warning btn-sm" href="#">Reduce by one</button>
          <button type="button" class="btn btn-outline-danger btn-sm " href="#">Remove all</button>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>Total: <%= totalPrice %> $</strong>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <a href="/checkout" class="btn btn-success" type="button" name="button">Checkout</a>
    </div>
  </div>

  <% } else {%>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <h2>No items in Cart</h2>
    </div>
  </div>

  <%}%>
</div>
